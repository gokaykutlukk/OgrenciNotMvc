@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLDERSLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Ders Id</th>
        <th>Ders Adı</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DERSID</td>
                <td>@item.DERSAD</td>
                <td><a href="/Default/Delete/@item.DERSID" class="btn btn-danger">Sil</a>
                <a href="/Default/Update/@item.DERSID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>

</table>
<a href="/Default/YeniDers" class="btn btn-primary">Yeni Ders Kaydı</a>
