@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLOGRENCILER>   

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>OgrenciId</th>
        <th>OgrenciAd</th>
        <th>OgrenciSoyad</th>
        <th>OgrenciFotograf</th>
        <th>OgrenciCinsiyet</th>
        <th>OgrenciKülüp</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OGRENCIID</td>
                <td>@item.OGRAD</td>
                <td>@item.OGRSOYAD</td>
                <td>@item.OGRFOTOGRAF</td>
                <td>@item.OGRCINSIYET</td>
                <td>@item.OGRKULUP</td>
                <td><a href="/Student/Delete/@item.OGRENCIID" class="btn btn-danger">Sil</a>
                <a href="/Student/update/@item.OGRENCIID" class="btn btn-success">Güncelle</a></td>

            </tr>
        }
    </tbody>
    

</table>
<a href="/Student/NewStudent" class="btn btn-primary">Yeni Öğrenci Kaydı</a>
